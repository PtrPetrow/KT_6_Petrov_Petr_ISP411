<Window x:Class="petShopPetrou.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petShopPetrou"
        mc:Ignorable="d"
        Title="Товары для животных" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
        <Label>
            <Image Source="/Images/logo.png"  VerticalAlignment="Center"
                   HorizontalAlignment="Left"/>
        </Label>
        <TextBlock Text="Товары для Животных" HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   FontSize="35" FontFamily="Comic Sans MS"></TextBlock>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>

</Window>
